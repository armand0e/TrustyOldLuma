{
  "name": "luna-gaming-tool",
  "version": "1.0.0",
  "description": "Luna Gaming Tool - Unified gaming tool for Steam game sharing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "author": "Luna Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.luna.gaming-tool",
    "productName": "Luna Gaming Tool",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/luna.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}